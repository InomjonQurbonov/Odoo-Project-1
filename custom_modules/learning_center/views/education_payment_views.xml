<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Payment Tree View -->
        <record id="view_payment_tree" model="ir.ui.view">
            <field name="name">payment.tree</field>
            <field name="model">education.payment</field>
            <field name="arch" type="xml">
                <tree string="Payments">
                    <field name="date"/>
                    <field name="amount"/>
                    <field name="pupil_id"/>
                    <field name="group_id"/>
                </tree>
            </field>
        </record>
        <!-- Payment Form View -->
        <record id="view_payment_form" model="ir.ui.view">
            <field name="name">payment.form</field>
            <field name="model">education.payment</field>
            <field name="arch" type="xml">
                <form string="Payment">
                    <group>
                        <field name="date"/>
                        <field name="amount"/>
                        <field name="description"/>
                        <field name="pupil_id"/>
                        <field name="group_id"/>
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>